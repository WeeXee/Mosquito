generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ClientInfos {
  ID               Int                @id @default(autoincrement())
  UserName         String
  Mail             String
  Password         String
  mosquitos_report Mosquitos_report[]
}

model Mosquitos_report {
  Id          Int          @id @default(autoincrement())
  DateOfByte  DateTime
  Location    String
  Symptom     String
  Photo       Bytes
  ClientInfos ClientInfos? @relation(fields: [MosquitosId], references: [ID])
  MosquitosId Int?
}
